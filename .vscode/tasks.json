{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/Almostengr.ThermometerPi.Api/Almostengr.ThermometerPi.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean Release Project",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "clean",
                "-c",
                "Release",
            ],
            "group": "none"
        },
        {
            "label": "Publish Release",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "-r",
                "linux-arm",
                "-c",
                "Release",
                "*sln"
            ],
            "group": "none",
            "dependsOn": ["Clean Release Project"]
        },
        {
            "label": "Deploy Local",
            "command": "scp",
            "type": "shell",
            "args": [
                "-pr",
                "${workspaceRoot}/LinuxService/thermometerapi.service",
                "${workspaceRoot}/Almostengr.ThermometerPi.Api/bin/Release/net5.0/linux-arm/publish/*",
                "iamadmin@192.168.1.125://home/iamadmin/thermometerpi/",
            ],
            "group": "none",
            "dependsOn": ["Publish Release"],
        },
        {
            "label": "Package TAR Release",
            "command": "tar",
            "type": "shell",
            "args": [
                "-czvf",
                "${workspaceRoot}/Almostengr.ThermometerPi.Api.tar.gz",
                "-C",
                "${workspaceRoot}/Almostengr.ThermometerPi.Api/bin/Release/net5.0/linux-arm/publish",
                "."
            ],
            "dependsOn": ["Publish Release"],
        },
        {
            "label": "Tag Release",
            "command" : "git",
            "type": "shell",
            "args": [
                "tag",
                "-a",
                "\"v$(date +%Y.%m.%d)\"",
                "-m",
                "\"version $(date +%Y.%m.%d)\""
            ],
            "dependsOn": ["Package Release"],
        }
    ]
}